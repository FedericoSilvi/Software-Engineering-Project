<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.clinic.address.view.StaffManagementLayoutController">
   <children>
      <TableView fx:id="staffTable" layoutX="-2.0" layoutY="31.0" prefHeight="321.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="surnameColumn" prefWidth="75.0" text="Surname" />
            <TableColumn fx:id="specColumn" prefWidth="75.0" text="Specility" />
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <ButtonBar layoutY="351.0" prefHeight="50.0" prefWidth="600.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleInsertStaff" text="Insert New Staff Member" />
            <Button mnemonicParsing="false" onAction="#handleUpdateStaff" prefHeight="26.0" prefWidth="408.0" text="Update a Staff Member" />
            <Button mnemonicParsing="false" onAction="#handleDeleteStaff" prefHeight="26.0" text="Delete a Staff Member" />
            <Button mnemonicParsing="false" onAction="#handleSchedule" text="Schedule" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
