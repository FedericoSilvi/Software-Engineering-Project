<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.clinic.address.view.AppointmentViewController">
    <children>
        <TableView fx:id="appointmentTable" layoutX="-2.0" layoutY="31.0" prefHeight="321.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="serviceColumn" prefWidth="75.0" text="Service" />
                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
                <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time" />
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="staffIdColumn" prefWidth="75.0" text="Staff_ID" />
            <TableColumn fx:id="clientIdColumn" prefWidth="75.0" text="Client_ID" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <ButtonBar layoutX="-14.0" layoutY="353.0" prefHeight="50.0" prefWidth="600.0">
            <buttons>
                <Button mnemonicParsing="false" onAction="#handleInsertApp" text="Insert New Appointment" />
                <Button mnemonicParsing="false" onAction="#handleDeleteApp" prefHeight="26.0" text="Delete an Appointment" />
                <Button mnemonicParsing="false" onAction="#handleUpdateApp" prefHeight="26.0" prefWidth="408.0" text="Update an Appointment" />
            </buttons>
        </ButtonBar>
    </children>
</AnchorPane>
